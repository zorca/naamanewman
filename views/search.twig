{% extends "layouts/base.twig" %}

{% block page_header %}
    <div class="page-header">
      <img class="article-image" src="{{ fn('get_template_directory_uri') }}/assets/images/bg-video.jpg" alt="{{title}}" title="{{title}}">
      <div class="page-title-wrap">
        <div class="container">
          <h1 class="page-title">{{__('Search')}}</h1>
        </div>
      </div>
    </div>
{% endblock %}

{% block content %}
  <div class="content">
    <div class="container">
      <div class="content__inner">
        {% if not posts %}
          <div class="alert alert-warning">
            {{  __('Sorry, no results were found', 'oxboot') }}
          </div>
          {{ fn('get_search_form', false) }}
        {% endif %}
        {% for post in posts %}
          <h2><a href="{{post.link}}">{{post.title}}</a></h2>
          <p>{{post.get_preview(50, true, '', true)}}</p>
        {% endfor %}
        {% include "partials/pagination.twig" %}
      </div>
    </div>
  </div>
{% endblock %}
